@using Taskboard.Entities.Task
@using Taskboard.Models
@using Taskboard.Services
@using Taskboard.Services.Task
@using Taskboard.Services.Update
@inject TaskService taskservice
@inject UpdateService updateservice


<MudButton OnClick="@(() => DeleteTaskAsync(SelectedTask))" Variant="Variant.Filled" Color="Color.Error" ><MudIcon Icon="@Icons.Material.Filled.Delete" Title="Delete" /></MudButton>

@code {
    [Parameter]
    public TaskItemEntity SelectedTask { get; set; }

    private async Task DeleteTaskAsync(TaskItemEntity task)
    {
        await taskservice.DeleteTaskAsync(task);
        updateservice.CallRequestUpdate();

    }
}